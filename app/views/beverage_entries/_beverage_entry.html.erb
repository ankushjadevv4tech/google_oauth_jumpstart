<div class="container mt-3">
  <div class="card p-4 shadow">
    <div class="d-flex align-items-center">
      <% if beverage_entry.photo.attached? %>
        <%= image_tag beverage_entry.photo, class: "rounded me-2 border border-2 border-dark", height: 100, width: 100, alt: "Beverage Photo" %>
      <% else %>
        <%= image_tag "default_beverage.png", class: "rounded me-2 border border-2 border-dark", height: 100, width: 100, alt: "Default Beverage Photo" %>
      <% end %>

      <div>
        <h4 class="fw-bold mb-0"><%= beverage_entry.subcategory %></h4>
        <span class="text-muted">Recorded <%= time_ago_in_words(beverage_entry.created_at) %> ago</span>
      </div>
    </div>

    <hr>

    <!-- Beverage Details -->
    <div class="mt-3">
      <div class="row mb-2">
        <div class="col-md-6">
          <strong>Category:</strong> <%= beverage_entry.category %>
        </div>
        <div class="col-md-6">
          <strong>Consumed At:</strong> <%= beverage_entry.consumed_at.strftime("%B %d, %Y at %I:%M %p") %>
        </div>
      </div>

      <div class="row mb-2">
        <div class="col-md-6">
          <strong>Quantity:</strong> <%= "#{beverage_entry.quantity} #{beverage_entry.quantity_unit}" %>
        </div>
        <div class="col-md-6">
          <strong>Temperature:</strong>
          <% temperature_emojis = {
            'very_cold' => '❄️',
            'cold' => '🧊',
            'cool' => '😎',
            'room_temperature' => '🌡️',
            'warm' => '☕️',
            'hot' => '♨️',
            'very_hot' => '🔥'
          } %>
          <span><%= temperature_emojis[beverage_entry.temperature] %> <%= beverage_entry.temperature.titleize %></span>
        </div>
      </div>

      <% if beverage_entry.notes.present? %>
        <div class="mt-3">
          <strong>Notes:</strong>
          <p class="card bg-light p-2 mt-1"><%= beverage_entry.notes %></p>
        </div>
      <% end %>
    </div>

    <!-- Actions -->
    <div class="mt-4">
      <%= link_to 'Back', beverage_entries_path, class: "btn btn-outline-secondary me-2" %>
      <%= link_to 'Edit', edit_beverage_entry_path(beverage_entry), class: "btn btn-outline-primary me-2" %>
      <%= button_to 'Delete', beverage_entry_path(beverage_entry), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger", form: { style: 'display: inline-block;' } %>
    </div>
  </div>
</div>
