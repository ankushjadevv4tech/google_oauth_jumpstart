
<div class="container-fluid login-background">
  <div class="row vh-100 align-items-center">
    <div class="col-12 col-md-8 col-lg-6 mx-auto">
      <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-5">
          <div class="text-center mb-4">
            <h1 class="h3 mb-3 fw-bold">Welcome Back</h1>
            <p class="text-muted">Sign in to continue to your account</p>
          </div>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <div class="input-group has-validation">
                <span class="input-group-text">
                  <i class="bi bi-envelope-fill"></i>
                </span>
                <%= f.email_field :email, 
                    class: 'form-control form-control-lg',
                    placeholder: 'Enter your email', 
                    autofocus: true,
                    pattern: '[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$' %>
              </div>
            </div>

            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <div class="input-group has-validation">
                <span class="input-group-text">
                  <i class="bi bi-lock-fill"></i>
                </span>
                <%= f.password_field :password, 
                    class: 'form-control form-control-lg', 
                    placeholder: 'Enter your password', 
                    autocomplete: "off" %>
                <button class="btn btn-outline-secondary toggle-password" type="button">
                  <i class="bi bi-eye-fill"></i>
                </button>

              </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
              <% if devise_mapping.rememberable? -%>
                <div class="form-check">
                  <%= f.check_box :remember_me, class: "form-check-input", id: "rememberCheck" %>
                  <label class="form-check-label" for="rememberCheck">
                    Remember me
                  </label>
                </div>
              <% end -%>

              <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-primary text-decoration-none" %>
            </div>

            <div class="d-grid gap-3">
              <%= f.submit "Sign In", class: "btn btn-primary btn-lg" %>
              
              <div class="position-relative">
                <hr class="my-4">
                <span class="divider-text">OR</span>
              </div>              
            </div>
            
          <% end %>


          <div class="text-center">
            <%= button_to user_google_oauth2_omniauth_authorize_path, 
            method: :post, 
            data: { 
              turbo: false              
            }, 
            class: "btn btn-outline-primary btn-lg align-items-center justify-content-center" do %>
              <i class="bi bi-google"></i> Continue with Google
            <% end %>
          </div>
        

          <div class="text-center mt-4">
            <p class="text-muted">
              Don't have an account? 
              <%= link_to "Sign up", new_registration_path(resource_name), class: "text-primary fw-bold" %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>