<div class="max-w-[430px] mx-auto w-full" style="font-family: Montserrat, sans-serif">
  <div class="relative flex flex-col">


    <div class="absolute top-[-320px] bottom-0 h-[500px] w-full bg-[linear-gradient(180deg,rgba(255,0,75,0)_39.18%,rgba(255,0,75,0.97)_86.76%)] rounded-b-[50px]">
      <div class="relative top-[380px] px-4 py-7.5">
        <div class="flex items-center justify-center gap-4"> <!-Changed to flex row -->
          <div class="rounded-full border border-white size-[50px] flex items-center justify-center">
            <img src="<%= image_path('profile.svg') %>" alt="Profile" class="size-full" />
          </div>
          <h6 class="text-[22px] text-white font-semibold">Welcome to Gutsphere</h6>
        </div>
      </div>
    </div>
    
    <div class="relative top-[140px] rounded-[40px] bg-white text-[#212121] shadow-[0px_5px_19px_0px_#6A6A6A29] w-full">
      <div class="py-[40px] px-[29px]">
        <div class="text-center mb-8">
          <h1 class="text-2xl font-bold mb-2">Login</h1>
          <p class="text-gray-500">Sign in to continue to your account</p>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-6">
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email address</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                </svg>
              </div>
              <%= f.email_field :email, 
                  class: 'w-full py-3 pl-10 pr-4 text-gray-700 bg-gray-50 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200',
                  placeholder: 'Enter your email', 
                  autofocus: true,
                  pattern: '[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$' %>
            </div>
          </div>

          <div class="mb-6">
            <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                </svg>
              </div>
              <%= f.password_field :password, 
                  class: 'w-full py-3 pl-10 pr-10 text-gray-700 bg-gray-50 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200', 
                  placeholder: 'Enter your password', 
                  autocomplete: "off" %>
              <button type="button" class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-500 hover:text-gray-700 focus:outline-none transition duration-200 toggle-password">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                  <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                </svg>
              </button>
            </div>
          </div>

          <div class="flex justify-between items-center mb-6">
            <% if devise_mapping.rememberable? -%>
              <div class="flex items-center">
                <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500", id: "rememberCheck" %>
                <label class="ml-2 text-sm text-gray-600" for="rememberCheck">
                  Remember me
                </label>
              </div>
            <% end -%>

            <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-blue-600 hover:text-blue-800 font-medium transition duration-200" %>
          </div>

          <div class="space-y-4">
            <%= f.submit "Sign In", class: "w-full btn btn-primary btn-lg text-sm font-medium d-flex align-items-center justify-content-center" %>
            
            <div class="relative my-6">
              <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-gray-300"></div>
              </div>
              <div class="relative flex justify-center text-sm">
                <span class="px-4 bg-white text-gray-500">OR continue with</span>
              </div>
            </div>
          </div>
        <% end %>

        <div class="w-28 mx-auto">
          <%= link_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-outline-primary text-sm font-medium d-flex align-items-center justify-content-center mt-3 gap-2" do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18">
            <path fill="#4285F4" d="M16.51 8H8.98v3h4.3c-.18 1-.74 1.48-1.6 2.04v2.01h2.6a7.8 7.8 0 0 0 2.38-5.88c0-.57-.05-.66-.15-1.18"></path><path fill="#34A853" d="M8.98 17c2.16 0 3.97-.72 5.3-1.94l-2.6-2a4.8 4.8 0 0 1-7.18-2.54H1.83v2.07A8 8 0 0 0 8.98 17"></path><path fill="#FBBC05" d="M4.5 10.52a4.8 4.8 0 0 1 0-3.04V5.41H1.83a8 8 0 0 0 0 7.18z"></path><path fill="#EA4335" d="M8.98 4.18c1.17 0 2.23.4 3.06 1.2l2.3-2.3A8 8 0 0 0 1.83 5.4L4.5 7.49a4.8 4.8 0 0 1 4.48-3.3"></path>
            </svg>          
            Google
          <% end %>
        </div>

        <div class="text-center mt-8">
          <p class="text-gray-600">
            Don't have an account? 
            <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-600 hover:text-blue-800 font-medium ml-1 transition duration-200" %>
          </p>
        </div>
      </div>
    </div>

    
  </div>
</div>
